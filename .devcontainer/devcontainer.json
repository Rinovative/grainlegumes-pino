{
  "name": "grainlegumes-pino",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },

  // GPU + RAM settings
  "runArgs": ["--name", "grainlegumes-pino", "--gpus", "all", "--shm-size=16G"],

  // Use non-root user
  "remoteUser": "mambauser",
  "updateRemoteUserUID": false,
  "workspaceFolder": "/home/mambauser/workspace",

  // ----------------------------------------------------------------------
  // üîó Mounts
  // ----------------------------------------------------------------------
  "mounts": [
    // üîê SSH Key
    "source=${env:USERPROFILE}\\.ssh,target=/home/mambauser/.ssh,type=bind,consistency=cached",

    // üß† Code from host
    "source=${localWorkspaceFolder},target=/home/mambauser/workspace,type=bind,consistency=cached",

    // üíæ Persistent Docker volumes
    "source=grainlegumes_data,target=/home/mambauser/workspace/data,type=volume",
    "source=grainlegumes_generation,target=/home/mambauser/workspace/data_generation/data,type=volume",
    "source=grainlegumes_training,target=/home/mambauser/workspace/model_training/data,type=volume"
  ],

  // ----------------------------------------------------------------------
  // üåø Environment variables
  // ----------------------------------------------------------------------
  "remoteEnv": {
    "GIT_SSH_COMMAND": "ssh -i /home/mambauser/.ssh/id_ed25519 -o StrictHostKeyChecking=no",
    "DATA_ROOT": "/home/mambauser/workspace/data",
    "GEN_ROOT": "/home/mambauser/workspace/data_generation/data",
    "TRAIN_ROOT": "/home/mambauser/workspace/model_training/data"
  },

  // ----------------------------------------------------------------------
  // üß© VS Code settings
  // ----------------------------------------------------------------------
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-renderers",
        "ms-azuretools.vscode-docker",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/micromamba/envs/grainlegumes-pino/bin/python",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
          "source.fixAll": true,
          "source.organizeImports": true
        },
        "notebook.formatOnSave.enabled": true,
        "notebook.codeActionsOnSave": { "source.fixAll": true },
        "notebook.defaultFormatter": "charliermarsh.ruff",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.ruffEnabled": true,
        "python.linting.mypyEnabled": true,
        "python.analysis.typeCheckingMode": "basic",
        "ruff.organizeImports": true,
        "ruff.fixAll": true
      }
    }
  }
}
